<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size3"
            android:layout_marginTop="50dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/weather_icon"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/weather_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/text_size4"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/weather_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size2"
            android:layout_marginLeft="76dp"
            />
        <TextView
            android:id="@+id/main_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"

            android:textSize="@dimen/text_size6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_up"/>
            <TextView
                android:id="@+id/main_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:layout_marginRight="20dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_down"/>
            <TextView
                android:id="@+id/main_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/last_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="@dimen/text_size1"
            android:paddingBottom="10dp"
            android:background="#45df1818"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_color"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/wind"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size2"
                />
            <TextView
                android:id="@+id/wind"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:gravity="right"
         />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/preasuure"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size2"
                />
            <TextView
                android:id="@+id/pressure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:gravity="right"
              />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/visible"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visibility"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size2"
                />
            <TextView
                android:id="@+id/visibility"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:gravity="right"
             />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/umidity"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Humidity"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size2"
                />
            <TextView
                android:id="@+id/humidity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size2"
                android:gravity="right"
            />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

    </LinearLayout>

</ScrollView>

